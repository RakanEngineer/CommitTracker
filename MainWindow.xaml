<Window x:Class="CommitTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CommitTracker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="User name" FontSize="14" FontWeight="Bold"/>
            <TextBox Name="UsernameTextBox" Height="25" Margin="0,5,0,10"/>

            <TextBlock Text="Choose date" FontSize="14" FontWeight="Bold"/>
            <DatePicker Name="CommitDatePicker" Margin="0,5,0,10"/>

            <TextBlock Text="No of commits" FontSize="14" FontWeight="Bold"/>
            <ComboBox Name="CommitCountComboBox" Height="25" Margin="0,5,0,10">
                <ComboBoxItem Content="0"/>
                <ComboBoxItem Content="1"/>
                <ComboBoxItem Content="2"/>
                <ComboBoxItem Content="3"/>
                <ComboBoxItem Content="4"/>
                <ComboBoxItem Content="5"/>
                <ComboBoxItem Content="6"/>
                <ComboBoxItem Content="7"/>
                <ComboBoxItem Content="8"/>
                <ComboBoxItem Content="9"/>
                <ComboBoxItem Content="10"/>
            </ComboBox>

            <TextBlock Text="Project" FontSize="14" FontWeight="Bold"/>
            <ComboBox Name="ProjectComboBox" Height="25" Margin="0,5,0,10">
                <ComboBoxItem Content="Proj A"/>
                <ComboBoxItem Content="Proj B"/>
                <ComboBoxItem Content="Proj C"/>
            </ComboBox>

            <Button Content="Add to Mixpanel" Name="SubmitButton" Height="30" Click="SubmitCommit_Click"
                    HorizontalAlignment="Right" Background="DarkBlue" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
